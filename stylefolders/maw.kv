<MakeAppointmentWindow>:
    name: "make_appointment"
    description: description
    # choose_button: choose_button
    on_enter: root.choose_dr()

    FloatLayout:
		canvas:
			Rectangle:
				source: 'Images/grad2.jpg'
                size: self.size
                pos: self.pos
        Label:
            text: "Appointment Description: "
            size_hint: (.2, .15)
            pos_hint: {"center_x": .20, "center_y": .85 }
            color: (0, 0, 0, 1)
            markup: True
            font_size: 20
        TextInput:
            id: description
            size_hint: (.3, .05)
            multiline: False
            pos_hint: {"center_x": .5, "center_y": .85 }
        Button:
            text: "< Back"
            size_hint: (.15, .05)
            pos_hint: {'top':1, 'left':1}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "pat_home"
