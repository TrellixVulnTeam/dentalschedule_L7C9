<MakeAppointmentWindow>:
    name: "make_appointment"
    description: description
    choose_button: choose_button

    FloatLayout:
		canvas:
			Rectangle:
				source: 'Images/grad2.jpg'
                size: self.size
                pos: self.pos
        Label:
            text: "Description: "
            size_hint: (.1, .15)
            pos_hint: {"center_x": .25, "center_y": .85 }
            color: (0, 0, 0, 1)
            markup: True
            font_size: 20
        TextInput:
            id: description
            size_hint: (.3, .05)
            multiline: False
            pos_hint: {"center_x": .5, "center_y": .85 }
        Button:
            id: choose_button
            text: "choose a doctor"
            size_hint: (.25, .1)
            pos_hint: {"center_x": .5, "center_y": .7 }
            on_release:
                root.choose_dr()
        Button:
            text: "Back >"
            size_hint: (.1, .05)
            pos_hint: {'x':.9, 'y':.91}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "pat_home"
