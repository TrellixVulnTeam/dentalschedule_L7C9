<CalendarWindow>:

    name: "calendar"

	on_enter: root.pop_cal()

    FloatLayout:
		canvas:
            Rectangle:
                source: 'Images/grad2.jpg'
                size: self.size
                pos: self.pos
        Button:
            text: "Next"
            size_hint: (.1, .05)
            pos_hint: {"x": .75, "y": .75}
            on_release: root.next_week()
        Button:
            text: "Prev"
            size_hint: (.1, .05)
            pos_hint: {"x": .15, "y": .75}
            on_release: root.prev_week()
        Button:
            text: "< back"
            size_hint: (.1, .05)
            pos_hint: {"center_x": 0.5, "y": .2}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "pat_home"
