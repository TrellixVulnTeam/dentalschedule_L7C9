<CalendarWindow>:

    name: "calendar"

	on_enter: root.pop_cal()

    FloatLayout:
		canvas:
            Rectangle:
                source: 'Images/grad2.jpg'
                size: self.size
                pos: self.pos
        Button:
            text: "Unavailable"
            size_hint: (.1, .05)
            pos_hint: {"x": .15, "y": .85}
            color: (1, 0, 0, 1)
        Button:
            text: "Available"
            size_hint: (.1, .05)
            pos_hint: {"x": .15, "y": .90}
            color: (0, 1, 0, 1)
        Button:
            text: "Next"
            size_hint: (.1, .05)
            pos_hint: {"x": .75, "y": .75}
            on_release: root.next_week()
        Button:
            text: "Prev"
            size_hint: (.1, .05)
            pos_hint: {"x": .15, "y": .75}
            on_release: root.prev_week()
        Button:
            text: "< back"
            size_hint: (.1, .15)
            pos_hint: {"top": 1, "left": 1}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "pat_home"