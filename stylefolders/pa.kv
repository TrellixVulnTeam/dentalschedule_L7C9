<PatientApps>:
    name: "patient_apps"
    appointment: appointment
	on_enter: root.get_app()

	canvas:
	    Rectangle:
	        source: 'Images/grad2.jpg'
	        size: self.size
	        pos: self.pos

    FloatLayout:
        Label:
            id: appointment
            text: "No Appointments"
            size_hint: (.25, .1)
			color: (0, 0, 0, 1)
            markup: True
            font_size: 14
            pos_hint: {"center_x": .5, "center_y": .65 }
		Button:
            text: "Back >"
            size_hint: (.1, .05)
            pos_hint: {'top':1, 'left':1}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "manage_accounts"
        Button:
            text: "Help?"
			font_size: 16
            size_hint: (.1, .05)
            pos_hint: {"top": 1, "right": 1}
            on_release:
                root.manager.transition.direction = "left"
                root.find_help()
