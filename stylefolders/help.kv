<Help>:
    name: "help"
    words: words
    on_enter: root.set_words()
    FloatLayout:
        Label:
            id: words
            text: ""
            size_hint: (.25, .1)
			color: (0, 1, 0, 1)
            markup: True
            font_size: 14
            pos_hint: {"center_x": .5, "center_y": .5 }
        Button:
            text: "Return"
            size_hint: (.1, .05)
            pos_hint: {'top':1, 'right':1}
            on_release:
                root.manager.transition.direction = "left"
				root.go_back()
