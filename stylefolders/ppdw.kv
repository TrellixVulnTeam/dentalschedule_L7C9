<PatientPostDeleteWindow>:
    name: "pat_post_del"
	canvas:
        Rectangle:
            source: 'Images/grad2.jpg'
            size: self.size
            pos: self.pos
    Label:
        text: "Would you like to create a new appointment or return to the home page?"
        size_hint: (.25, .15)
        color: (0, 0, 0, 1)
        markup: True
        font_size: 14
        pos_hint: {"center_x": .5, "center_y": .75 }

    Button:
        text: "Create A New Appointment"
        size_hint: (.33, .1)
        pos_hint: {"center_x": .5, "top": .55}
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "make_appointment"
    Button:
        text: "Return To Home Page"
        size_hint: (.33, .1)
        pos_hint: {"center_x": .5, "top": .45}
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "pat_home"
