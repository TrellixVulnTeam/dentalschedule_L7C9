<PatientHomeWindow>:
    name: "pat_home"
    appointment: appointment

	on_enter: root.get_app()

	FloatLayout:

		canvas:
            Rectangle:
                source: 'Images/grad2.jpg'
                size: self.size
                pos: self.pos
		Label:
            id: availableAppointments
            text: "Appointments"
			underline: True
			bold: True
            size_hint: (.25, .1)
			color: (0, 0, 0, 1)
            markup: True
            font_size: 24
            pos_hint: {"center_x": .5, "center_y": .925 }
        Label:
            id: appointment
            text: "No Appointments"
            size_hint: (.25, .1)
			color: (0, 0, 0, 1)
            markup: True
            font_size: 14
            pos_hint: {"center_x": .5, "center_y": .65 }
        Button:
            text: "Make An Appointment"
            size_hint: (.25, .1)
            pos_hint: {"center_x": .5, "center_y": .3 }
            on_release:
                root.manager.transition.direction = "right"
                root.clean_labels()
                root.make_appointment()
				root.remove_labels()
        Button:
            text: "Delete/Edit Appointment"
            size_hint: (.25, .1)
            pos_hint: {"center_x": .5, "center_y": .15}
            on_release:
                root.manager.transition.dorection = "right"
                root.clean_labels()
                root.manager.current = "pat_edit_app"
				root.remove_labels()
        Button:
            text: "Logout"
            size_hint: (.15, .05)
            pos_hint: {'top':1, 'right':1}
            on_release:
                root.logout()
                root.manager.transition.direction = "left"
                root.manager.current = "user"
