        Label:
            id: appointment
            text: "No Appointments"
            size_hint: (.25, .1)
			color: (0, 0, 0, 1)
            markup: True
            font_size: 14
            pos_hint: {"center_x": .5, "center_y": .65 }
        #Button:
            #text: "Reload Appointments"
            #size_hint: (.25, .1)
            #pos_hint: {"center_x": .5, "center_y": .5 }
            #on_release:
            #    root.get_app()
        Button:
            text: "Make an Appointment"
            size_hint: (.25, .1)
            pos_hint: {"center_x": .5, "center_y": .3 }
            on_release:
                root.manager.transition.direction = "right"
                root.make_appointment()
        Button:
            text: "Logout"
            size_hint: (.1, .05)
            pos_hint: {'x':.9, 'y':.91}
            on_release:
                root.logout()
                root.manager.transition.direction = "left"
                root.manager.current = "pat_login"
