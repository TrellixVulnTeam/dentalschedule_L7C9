<StaffHomeWindow>:
    name: "st_home"
    appointment: appointment

	on_enter: root.get_app()

    FloatLayout:

		canvas:
			Rectangle:
				source: 'Images/grad2.jpg'
				size: self.size
				pos: self.pos
        Label:
            id: appointment
            text: "No Appointments"
            size_hint: (.25, .1)
			color: (0, 1, 0, 1)
            markup: True
            font_size: 14
            pos_hint: {"center_x": .5, "center_y": .65 }
        Button:
            text: "Reload Appointments"
            size_hint: (.25, .1)
            pos_hint: {"center_x": .5, "center_y": .3 }
            on_release:
                root.get_app()
        Button:
            text: "Delete an appointment"
            size_hint: (.25, .1)
            pos_hint: {"center_x": .5, "center_y": .2 }
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "staff_edit_app"
        Button:
            text: "Schedule an appointment"
            size_hint: (.25, .1)
            pos_hint: {"center_x": .5, "center_y": .1 }
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "staff_sched_app"
        Button:
            text: "Logout"
            size_hint: (.1, .05)
            pos_hint: {'top':1, 'left':1}
            on_release:
                root.logout()
                root.manager.transition.direction = "left"
                root.manager.current = "user"
        Button:
            text: "Help?"
			font_size: 16
            size_hint: (.1, .05)
            pos_hint: {"x": .9, "y": .95}
            on_release:
                root.manager.transition.direction = "left"
                root.find_help()
