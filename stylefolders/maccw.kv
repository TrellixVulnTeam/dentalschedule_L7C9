<ManageAccountsWindow>:
    name: "manage_accounts"
    email: email
    type: type

	canvas:
		Rectangle:
			source: 'Images/grad1.jpg'
			size: self.size
			pos: self.pos


    FloatLayout:
        Label:
            text: "Remove and view accounts (patient or employee)"
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
        Label:
            text: "User Email: "
            size_hint: (.2, .15)
            pos_hint: {"center_x": .25, "center_y": .65 }
            color: (0, 0, 0, 1)
            markup: True
            font_size: 20
        TextInput:
            id: email
            size_hint: (.3, .05)
            multiline: False
            pos_hint: {"center_x": .5, "center_y": .65 }
        Label:
            text: "User Type: "
            size_hint: (.2, .15)
            pos_hint: {"center_x": .25, "center_y": .55 }
            color: (0, 0, 0, 1)
            markup: True
            font_size: 20
        TextInput:
            id: type
            size_hint: (.3, .05)
            multiline: False
            pos_hint: {"center_x": .5, "center_y": .55 }
        Label:
            text: "Type Patient or Employee exactly"
            size_hint: (.2, .15)
            pos_hint: {"center_x": .5, "center_y": .50 }
            color: (0, 0, 0, 1)
            markup: True
            font_size: 14
        Button:
            text: "Activate"
            size_hint: (.2, .1)
            pos_hint: {"center_x":.233, "y": .3}
            on_release:
                root.reactivate()
        Button:
            text: "View Schedule"
            size_hint: (.2, .1)
            pos_hint: {"center_x":.5, "y": .3}
            on_release:
                root.view_schedule()
        Button:
            text: "Deactivate"
            size_hint: (.2, .1)
            pos_hint: {"center_x":.766, "y": .3}
            on_release:
                root.deactivate()
		Button:
            text: "< Back"
            size_hint: (.1, .05)
            pos_hint: {'top':1, 'left':1}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "admin_action"
        Button:
            text: "Help?"
			font_size: 16
            size_hint: (.1, .05)
            pos_hint: {"x": .9, "y": .95}
            on_release:
                root.manager.transition.direction = "left"
                root.find_help()
