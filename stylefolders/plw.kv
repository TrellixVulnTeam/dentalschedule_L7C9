<PatientLoginWindow>:
    name: "pat_login"

    email: email
    password: password

    FloatLayout:
        canvas:
            Rectangle:
                source: 'Images/grad2.jpg'
                size: self.size
                pos: self.pos
        Label:
            text: "Email: "
            size_hint: (.25, .10)
            pos_hint: {'x': .10, 'y':.525}
            color: (0, 0, 0, 1)
            markup: True
            font_size: 20

        TextInput:
            id: email
            multiline: False
            size_hint: (.3, .05)
            pos_hint: {'center_x': .5, 'y': .550}
        Label:
            text: "Password: "
            size_hint: (.25, .10)
            pos_hint: {'x': .10, 'y':.425}
            color: (0, 0, 0, 1)
            markup: True
            font_size: 20
        TextInput:
            id: password
            multiline: False
            password: True
            size_hint: (.3, .05)
            pos_hint: {'center_x': .5, 'y': .450}
        Button:
            text: "Login"
			font_size: 16
            size_hint: (.25, .10)
            pos_hint: {'center_x':.5, 'center_y':.35}
            on_release:
                root.manager.transition.direction = "right"
                root.login()
                root.reset_inputs()
        Button:
            text: "Register New Account"
			font_size: 16
            size_hint: (.25, .10)
            pos_hint: {'center_x':.5, 'center_y':.21}
            on_release:
                root.manager.transition.direction = "right"
                root.register()
        Button:
            text: "< Back"
            size_hint: (.1, .05)
            pos_hint: {'top':1, 'left':1}
            on_release:
                root.reset_inputs()
                root.manager.transition.direction = "right"
                root.manager.current = "user"
        Image:
            source: 'Images/MyDental.png'
            keep_ration: False
            allow_stretch: True
            opacity: 0.9
            size_hint: (.35, .35)
            pos_hint: {"center_x": .5, "center_y": .8}

        Button:
            text: "Help?"
			font_size: 16
            size_hint: (.1, .05)
            pos_hint: {"x": .9, "y": .95}
            on_release:
                root.manager.transition.direction = "left"
                root.find_help()
