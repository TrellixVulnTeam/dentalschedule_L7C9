<UserTypeWindow>:
    name: "user"

    FloatLayout:

        canvas:
            Rectangle:
                source: 'Images/grad2.jpg'
                size: self.size
                pos: self.pos

        Button:
            text: "Staff"
			font_size: 16
            size_hint: (.25, .1)
            pos_hint: {"center_x": .7, "center_y": .2}
            on_release:
                root.manager.transition.direction = "left"
                root.staff()

        Button:
            text: "Patient"
			font_size: 16
            size_hint: (.25, .1)
            pos_hint: {"center_x": .3, "center_y": .2}
            on_release:
                root.manager.transition.direction = "left"
                root.patient()
        Button:
            text: "Help?"
			font_size: 16
            size_hint: (.1, .05)
            pos_hint: {"x": .9, "y": .95}
            on_release:
                root.manager.transition.direction = "left"
                root.find_help()

        Image:
            source: 'Images/MyDental.png'
            keep_ration: False
            allow_stretch: True
            opacity: 0.9
            size_hint: (.6, .6)
            pos_hint: {"center_x": .5, "center_y": .6}
