<AdminActionWindow>:
    name: "admin_action"
	canvas:
        Rectangle:
            source: 'Images/grad1.jpg'
            size: self.size
            pos: self.pos

    Button:
        text: "Create Staff Account"
        size_hint: (.33, .1)
        pos_hint: {"center_x": .5, "top": .766666}
        on_release:
            root.manager.transition.direction = "left"
            root.create_staff()
