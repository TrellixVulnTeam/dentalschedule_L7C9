<AdminActionWindow>:
    name: "admin_action"
	canvas:
        Rectangle:
            source: 'Images/grad2.jpg'
            size: self.size
            pos: self.pos

    Button:
        text: "Create Staff Account"
        size_hint: (.33, .1)
        pos_hint: {"center_x": .7, "center_y": .65}
        on_release:
            root.manager.transition.direction = "left"
            root.create_staff()
    Button:
        text: "Manage Accounts"
        size_hint: (.33, .1)
        pos_hint: {"center_x": .7, "center_y": .35}
        on_release:
            root.manager.transition.direction = "left"
            root.manage_accounts()
    Button:
        text: "Logout"
        size_hint: (.1, .05)
        pos_hint: {'x':0, 'y':.95}
        on_release:
            root.manager.transition.direction = "left"
            root.logout()
    Button:
        text: "Help?"
        font_size: 16
        size_hint: (.1, .05)
        pos_hint: {"x": .9, "y": .95}
        on_release:
            root.manager.transition.direction = "left"
            root.find_help()
    Image:
        source: 'Images/MyDental.png'
        keep_ration: False
        allow_stretch: True
        opacity: 0.9
        size_hint: (.47, .47)
        pos_hint: {"center_x": .3, "center_y": .5}
