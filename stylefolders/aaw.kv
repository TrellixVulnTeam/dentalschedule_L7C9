<AdminActionWindow>:
    name: "admin_action"
	canvas:
        Rectangle:
            source: 'Images/grad1.jpg'
            size: self.size
            pos: self.pos

    Button:
        text: "Create Staff Account"
        size_hint: (.33, .1)
        pos_hint: {"center_x": .7, "center_y": .65}
        on_release:
            root.manager.transition.direction = "left"
            root.create_staff()
    # Button:
    #     text: "Setup Calendar"
    #     size_hint: (.33, .1)
    #     pos_hint: {"center_x": .5, "top": .55}
    #     # on_release:
    #     #     root.manager.transition.direction = "left"
    #     #     root.setup_calendar()
    Button:
        text: "Manage Accounts"
        size_hint: (.33, .1)
        pos_hint: {"center_x": .7, "center_y": .35}
        on_release:
            root.manager.transition.direction = "left"
            root.manage_accounts()
    Button:
        text: "Logout"
        size_hint: (.15, .05)
        pos_hint: {'top':1, 'right':1}
        on_release:
            root.manager.transition.direction = "left"
            root.logout()
            root.manager.current = "staff_type"
    Image:
        source: 'Images/MyDental.png'
        keep_ration: False
        allow_stretch: True
        opacity: 0.9
        size_hint: (.47, .47)
        pos_hint: {"center_x": .3, "center_y": .5}
