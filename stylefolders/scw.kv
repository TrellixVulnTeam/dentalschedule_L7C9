<SetupCalendarWindow>:
    name: "setup_calendar"

	canvas:
		Rectangle:
			source: 'Images/grad1.jpg'
			size: self.size
			pos: self.pos

    FloatLayout:
        Button:
            text: "< Back"
            size_hint: (.1, .05)
            pos_hint: {'top':1, 'left':.1}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "admin_action"
        Label:
            text: "Set up the calendar"
        Button:
            text: "Help?"
			font_size: 16
            size_hint: (.1, .05)
            pos_hint: {"x": .9, "y": .95}
            on_release:
                root.manager.transition.direction = "left"
                root.find_help()
