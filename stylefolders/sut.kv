<StaffUserType>
    name: "staff_type"

	canvas:
        Rectangle:
            source: 'Images/grad2.jpg'
            size: self.size
            pos: self.pos

    Button:
        text: "Admin Login"
		font_size: 16
        size_hint: (.33, .1)
        pos_hint: {"center_x": .7, "center_y": .65}
        on_release:
            root.manager.transition.direction = "left"
            root.admin()
    Button:
        text: "Doctor Login"
		font_size: 16
        size_hint: (.33, .1)
        pos_hint: {"center_x": .7, "center_y": .5}
        on_release:
            root.manager.transition.direction = "left"
            root.doctor()
    Button:
        text: "Hygenist Login"
		font_size: 16
        size_hint: (.33, .1)
        pos_hint: {"center_x": .7, "center_y": .35}
        on_release:
            root.manager.transition.direction = "left"
            root.hygenist()
    Button:
        text: "< Back"
        size_hint: (.1, .05)
        pos_hint: {"top": 1, "left": 1}
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "user"
    Image:
        source: 'Images/MyDental.png'
        keep_ration: False
        allow_stretch: True
        opacity: 0.9
        size_hint: (.47, .47)
        pos_hint: {"center_x": .3, "center_y": .5}

    Button:
        text: "Help?"
        font_size: 16
        size_hint: (.1, .05)
        pos_hint: {"x": .9, "y": .95}
        on_release:
            root.manager.transition.direction = "left"
            root.find_help()
